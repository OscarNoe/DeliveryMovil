<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    cardview:cardCornerRadius="5dp"


    xmlns:cardview="http://schemas.android.com/apk/res-auto" >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:gravity="bottom">
        <ImageView
            android:id="@+id/ivCardview"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"

            />

            <TextView
                android:id="@+id/tvNombre"
                android:fontFamily="serif"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:text="Titulo del platillo"/>

            <TextView
                android:id="@+id/tvDesc"
                android:fontFamily="serif-monospace"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:text="Descripcion del platillo"/>


      <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@drawable/separador"
            android:layout_marginLeft="35dp"
          android:layout_marginBottom="4dp"
            android:layout_marginRight="35dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/tvPrecio"
                android:textSize="18sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#FF7B34"
                android:layout_weight = "1"
                android:layout_marginLeft="20dp"
                android:text="$ 156.90"/>
            <!--<TextView
                android:gravity="center"
                android:text="+"
                android:textStyle="bold"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:background="@drawable/boton_add"
                android:layout_marginLeft="30dp"
                android:textColor="@android:color/white" -->
                 />
            <Button
                android:id="@+id/btnCart"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/boton_add"
                android:layout_weight = "0"
                android:drawableRight="@drawable/ic_shopping_cart_white_24dp"
                android:textColor="@android:color/white"/>


        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>